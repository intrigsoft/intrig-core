{
  "name": "@intrig/plugin-next",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/next/src",
  "projectType": "library",
  "tags": ["Intrig", "next", "generator"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/plugins/next",
        "main": "plugins/next/src/index.ts",
        "tsConfig": "plugins/next/tsconfig.lib.json",
        "compiler": "swc",
        "format": ["esm", "cjs"],
        "outputFileName": "index.js",
        "assets": [
          {
            "input": "plugins/next",
            "glob": "package.json",
            "output": "."
          }
        ],
        "rollupConfig": "plugins/next/rollup.config.cjs"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/plugins/next"
      },
      "dependsOn": [
        "^build"
      ]
    }
  }
}