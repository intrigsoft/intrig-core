{
  "name": "@intrig/vite",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "plugins/vite/src",
  "projectType": "library",
  "tags": [],
  "// targets": "to see all targets run: nx show project @intrig/vite --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/plugins/vite",
        "tsConfig": "plugins/vite/tsconfig.lib.json",
        "packageJson": "plugins/vite/package.json",
        "main": "plugins/vite/src/index.ts",
        "assets": [
          {
            "input": "plugins/vite",
            "glob": "package.json",
            "output": "."
          }
        ]
      }
    }
  }
}
