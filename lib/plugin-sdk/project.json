{
  "name": "@intrig/plugin-sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lib/plugin-sdk/src",
  "projectType": "library",
  "tags": ["Intrig", "plugin-sdk"],
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/lib/plugin-sdk",
        "main": "lib/plugin-sdk/src/index.ts",
        "tsConfig": "lib/plugin-sdk/tsconfig.lib.json",
        "compiler": "swc",
        "format": ["esm", "cjs"],
        "outputFileName": "index.js",
        "assets": [
          {
            "input": "lib/plugin-sdk",
            "glob": "package.json",
            "output": "."
          }
        ],
        "rollupConfig": "lib/plugin-sdk/rollup.config.cjs"
      }
    },
    "nx-release-publish": {
      "executor": "@nx/js:release-publish",
      "options": {
        "packageRoot": "dist/lib/plugin-sdk"
      },
      "dependsOn": [
        "^build"
      ]
    }
  }
}
