    },
    {
      "path": "../../lib/openapi-source/tsconfig.lib.json"
    },
    {
      "path": "../../lib/next-binding/tsconfig.lib.json"
    },
    {
      "path": "../../lib/common/tsconfig.lib.json"
    }
  ]
